#!/bin/bash

start_year=${1:-2000}
end_year=${2:-2049}
this_year=$(date +%Y)

mkdir -p "tmp_files"

for i in `seq $start_year $end_year`; do
    printf "fetching year $i"

    if [ $i -eq $this_year ]; then
        url="http://www.kalender.se/helgdagar"
    else
        url="http://www.kalender.se/helgdagar/$i"
    fi

    curl -o "tmp_files/$i" $url
    echo " done"
done

